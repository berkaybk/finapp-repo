@model FinApp.UI.Models.ViewModels.AgreementViewModel

@{
    ViewData["Title"] = "Agreement - Create";
}

<h1>Create</h1>

<h4>Agreement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Agreement.PartnerId" class="control-label"></label>
                <select asp-for="Agreement.PartnerId" asp-items="@(new SelectList(Model.Partners, "Id", "Name"))" class="form-control"></select>
                <span asp-validation-for="Agreement.PartnerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Agreement.RiskLevelId" class="control-label"></label>
                <select asp-for="Agreement.RiskLevelId" asp-items="@(new SelectList(Model.RiskLevels, "Id", "Name"))" class="form-control"></select>
                <span asp-validation-for="Agreement.RiskLevelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Agreement.Name" class="control-label"></label>
                <input asp-for="Agreement.Name" class="form-control" />
                <span asp-validation-for="Agreement.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Agreement.StartDate" class="control-label"></label>
                <input asp-for="Agreement.StartDate" class="form-control" />
                <span asp-validation-for="Agreement.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Agreement.EndDate" class="control-label"></label>
                <input asp-for="Agreement.EndDate" class="form-control" />
                <span asp-validation-for="Agreement.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Agreement.Amount" class="control-label"></label>
                <input asp-for="Agreement.Amount" class="form-control" />
                <span asp-validation-for="Agreement.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Agreement.Keywords" class="control-label"></label>
                <input asp-for="Agreement.Keywords" class="form-control" />
                <span asp-validation-for="Agreement.Keywords" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
